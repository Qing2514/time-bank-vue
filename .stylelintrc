{
  "customSyntax": "postcss-sass",
  "ignoreFiles": ["**/*.css"],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines",
    "stylelint-config-prettier"
  ],
  "plugins": ["stylelint-scss", "stylelint-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ],
        "disableFix": true
      }
    ]
  }
}
